{
  "name": "firebase-ssr-starter",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/deltaepsilon/firebase-ssr-starter.git",
  "author": "Chris Esplin <chris@chrisesplin.com>",
  "license": "apache-2.0",
  "dependencies": {
    "@babel/plugin-proposal-export-default-from": "^7.0.0-beta.53",
    "@zeit/next-css": "^0.2.0",
    "firebase-tools": "^4.0.0",
    "md5": "^2.2.1",
    "next": "^6.0.3",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "rmwc": "^1.8.0",
    "unistore": "^3.0.6"
  },
  "engines": {
    "node": "8"
  },
  "scripts": {
    "start": "node server.js",
    "build:export": "npm run build && npm run export",
    "build": "next build",
    "export": "next export && cp ./sw.js ./out//sw.js && cp ./environments/environment.sw.js ./out//environment.sw.js",
    "export:windows": "rmdir /S /Y out & next export & copy sw.js out\\sw.js & copy environments\\environment.sw.js out\\environment.sw.js",
    "test:windows": "cd functions & yarn test:prod",
    "deploy": "sh bin/build.sh && sh bin/deploy.sh",
    "deploy:windows": "powershell .\\bin\\build.ps1 & powershell .\\bin\\deploy.ps1",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:functions": "firebase deploy --only functions",
    "deploy:hosting": "firebase deploy --only hosting",
    "v": "node --version"
  }
}
