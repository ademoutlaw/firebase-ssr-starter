service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read: if request.auth.uid == uid
    }

    function isUser() {
      return request.auth.uid == uid
    }

    function isAdmin() {
      return request.auth.token.isAdmin == true
    }

    function isModerator() {
      return request.auth.token.isModerator == true
    }

    match /admin/{document=**} { 
      allow read, write: if isAdmin()
    }

    match /users/{uid} { 
      allow read, write: if isUser() || isAdmin()
      allow write: if isAdmin()
    }

    match /user-owned/{type}/{uid} { 
      allow read, write: if isUser() || isAdmin()
    }
    
    match /user-writeable/{type}/{uid} { 
      allow write: if isUser() || isAdmin()
    }
    
    match /user-readable/{type}/{uid} { 
      allow read: if isUser() || isAdmin()
    }
  }
}